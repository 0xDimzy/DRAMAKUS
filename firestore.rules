rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId}/continueWatching/{docId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update: if request.auth != null
        && request.auth.uid == userId
        && isValidEntry(request.resource.data);
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    function isValidEntry(data) {
      return data.keys().hasAll(['platform', 'dramaId', 'dramaTitle', 'dramaPoster', 'episodeId', 'progress', 'timestamp'])
        && data.platform is string
        && data.dramaId is string
        && data.dramaTitle is string
        && data.dramaPoster is string
        && data.episodeId is string
        && data.progress is number
        && data.timestamp is number;
    }
  }
}
